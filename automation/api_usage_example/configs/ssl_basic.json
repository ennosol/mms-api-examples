{
    "options": {
        "downloadBase": "/var/lib/mongodb-mms-automation"
    },
    "ssl": {
        "CAFilePath": "/etc/mongodb-mms/ca.cert",
        "clientCertificateMode": "OPTIONAL"
    },
    "mongoDbVersions": [
        {
            "name": "3.0.0"
        }
    ],
    "backupVersions": [
        {
            "hostname": "AGENT_HOSTNAME",
            "logPath": "/var/log/mongodb-mms-automation/backup-agent.log",
            "logRotate": {
                "sizeThresholdMB": 1000,
                "timeThresholdHrs": 24
            }
        }
    ],

    "monitoringVersions": [
        {
            "hostname": "AGENT_HOSTNAME",
            "logPath": "/var/log/mongodb-mms-automation/monitoring-agent.log",
            "logRotate": {
                "sizeThresholdMB": 1000,
                "timeThresholdHrs": 24
            }
        }
    ],
    "processes": [
        {
            "args2_6": {
                "net": {
                    "port": 28000,
                    "ssl": {
                        "mode": "requireSSL",
                        "PEMKeyFile": "/etc/mongodb-mms/blue_0.pem"
                    }
                },
                "replication": {
                    "replSetName": "blue"
                },
                "storage": {
                    "dbPath": "/data/blue_0"
                },
                "systemLog": {
                    "destination": "file",
                    "path": "/data/blue_0/mongodb.log"
                }
            },
            "hostname": "AGENT_HOSTNAME",
            "logRotate": {
                "sizeThresholdMB": 1000,
                "timeThresholdHrs": 24
            },
            "name": "blue_0",
            "processType": "mongod",
            "version": "3.0.0",
            "authSchemaVersion": 5
        },
        {
            "args2_6": {
                "net": {
                    "port": 28001,
                    "ssl": {
                        "mode": "requireSSL",
                        "PEMKeyFile": "/etc/mongodb-mms/blue_0.pem"
                    }
                },
                "replication": {
                    "replSetName": "blue"
                },
                "storage": {
                    "dbPath": "/data/blue_1"
                },
                "systemLog": {
                    "destination": "file",
                    "path": "/data/blue_1/mongodb.log"
                }
            },
            "hostname": "AGENT_HOSTNAME",
            "logRotate": {
                "sizeThresholdMB": 1000,
                "timeThresholdHrs": 24
            },
            "name": "blue_1",
            "processType": "mongod",
            "version": "3.0.0",
            "authSchemaVersion": 5
        },
        {
            "args2_6": {
                "net": {
                    "port": 28002,
                    "ssl": {
                        "mode": "requireSSL",
                        "PEMKeyFile": "/etc/mongodb-mms/blue_0.pem"
                    }
                },
                "replication": {
                    "replSetName": "blue"
                },
                "storage": {
                    "dbPath": "/data/blue_2"
                },
                "systemLog": {
                    "destination": "file",
                    "path": "/data/blue_2/mongodb.log"
                }
            },
            "hostname": "AGENT_HOSTNAME",
            "logRotate": {
                "sizeThresholdMB": 1000,
                "timeThresholdHrs": 24
            },
            "name": "blue_2",
            "processType": "mongod",
            "version": "3.0.0",
            "authSchemaVersion": 5
        }
    ],
    "replicaSets": [
        {
            "_id": "blue",
            "members": [
                {
                    "_id": 0,
                    "host": "blue_0"
                },
                {
                    "_id": 1,
                    "host": "blue_1"
                },
                {
                    "_id": 2,
                    "arbiterOnly": true,
                    "host": "blue_2",
                    "priority": 0
                }
            ]
        }
    ],
    "roles": [],
    "sharding": []
}
